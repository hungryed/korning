
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>E-mail</th>
    <th>Sales Records</th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
  <td><%= employee.first_name %></td>
  <td><%= employee.last_name %></td>
  <td><%= mail_to employee.email %></td>
  <td><%= link_to "Sale details", employee %></td>
  </tr>
<% end %>
</table>
